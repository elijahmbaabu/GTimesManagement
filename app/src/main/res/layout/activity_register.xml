<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundphoto"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="G-Times E-store "
        android:textColor="#FFDA22"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="Create New Account"
        android:textColor="#E0EAE9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/Fname"
        android:layout_width="403dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Your Full Name"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#F8F5F5"
        android:textColorHint="#F8F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.09" />

    <EditText
        android:id="@+id/dial"
        android:layout_width="406dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Your Phone Number"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#F6F1F1"
        android:textColorHint="#F3FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/Fname"
        app:layout_constraintStart_toStartOf="@+id/Fname"
        app:layout_constraintTop_toBottomOf="@+id/Fname" />

    <EditText
        android:id="@+id/Mmail"
        android:layout_width="414dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Your Email Address"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#F3FFFFFF"
        android:textColorHint="#F2FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/dial"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@+id/dial"
        app:layout_constraintTop_toBottomOf="@+id/dial" />

    <Button
        android:id="@+id/joinm"
        android:layout_width="397dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="Register"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passcon"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/mPassword"
        android:layout_width="405dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#F3FFFFFF"
        android:textColorHint="#F3FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/Mmail"
        app:layout_constraintStart_toStartOf="@+id/Mmail"
        app:layout_constraintTop_toBottomOf="@+id/Mmail" />

    <EditText
        android:id="@+id/passcon"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Confirm Your Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#F7FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/mPassword"
        app:layout_constraintStart_toStartOf="@+id/mPassword"
        app:layout_constraintTop_toBottomOf="@+id/mPassword" />

    <TextView
        android:id="@+id/login"
        android:layout_width="408dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="Already Refistered? Login Here."
        android:textColor="#FFEB3B"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joinm"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintVertical_bias="0.048" />
</android.support.constraint.ConstraintLayout>