<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundphoto"
    tools:context=".Login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="G-Times E-store "
        android:textColor="#FFDA22"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:textColor="#E0EAE9"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/Mmail"
        android:layout_width="371dp"
        android:layout_height="66dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Your Email Address"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#F3FFFFFF"
        android:textColorHint="#F2FFFFFF"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="250dp" />

    <Button
        android:id="@+id/joinm"
        android:layout_width="368dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="204dp"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="Login"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mPassword"
        app:layout_constraintTop_toBottomOf="@+id/mPassword"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/mPassword"
        android:layout_width="367dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#F3FFFFFF"
        android:textColorHint="#F3FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/Mmail"
        app:layout_constraintStart_toStartOf="@+id/Mmail"
        app:layout_constraintTop_toBottomOf="@+id/Mmail" />

    <TextView
        android:id="@+id/login"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="Not Registered? Register."
        android:textColor="#FFEB3B"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/joinm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/joinm"
        app:layout_constraintTop_toBottomOf="@+id/joinm"
        app:layout_constraintVertical_bias="0.06" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>